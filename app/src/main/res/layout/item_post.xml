<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        >
        <androidx.cardview.widget.CardView
            android:id="@id/card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardPreventCornerOverlap="false"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="75dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_image"
                android:id="@+id/profile_image"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_toEndOf="@id/card"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/username"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03-07-2021  12:30 AM"
            android:textSize="13sp"
            android:layout_below="@id/username"
            android:layout_toEndOf="@id/card"
            android:id="@+id/date"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/options"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/relative"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description..."
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:padding="5dp"
            android:id="@+id/description"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/post_image"
            android:src="@drawable/ic_baseline_image_24"
            android:scaleType="fitCenter"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:id="@+id/like"
                android:visibility="visible"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_favorite_24"
                android:id="@+id/liked"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/like"
                android:textSize="15dp"
                android:text="00"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:id="@+id/likes_count"/>


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/comments"
                android:layout_toEndOf="@id/likes_count"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_marginStart="15dp"
                android:id="@+id/comments"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comments_count"
                android:text="00"
                android:layout_toEndOf="@id/comments"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:textSize="16dp"/>
<!--
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/share"
                android:layout_toEndOf="@id/comments_count"
                android:layout_marginStart="15sp"
                android:id="@+id/share"/>
-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_bookmark_border_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/save"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_bookmark_added_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/saved"
                android:visibility="gone"
               />
            <RelativeLayout
                android:layout_marginStart="15sp"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/comments_count"
                android:layout_height="wrap_content">
                <ImageView

                    android:id="@+id/num"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/phone"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01316057864"
                    android:id="@+id/number"
                    android:textColor="@android:color/black"
                    />
            </RelativeLayout>
        </RelativeLayout>





        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            />

    </LinearLayout>
</RelativeLayout>